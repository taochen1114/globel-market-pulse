---
interface Props {
  title: string;
  subtitle?: string;
}
const { title, subtitle } = Astro.props;
---

<div class="section-title">
  <h2>{title}</h2>
  {subtitle && <p>{subtitle}</p>}
</div>

<style>
.section-title {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  margin-bottom: 1rem;
}

.section-title h2 {
  margin: 0;
  color: #e2e8f0;
  font-size: clamp(1.5rem, 2vw, 1.9rem);
}

.section-title p {
  margin: 0;
  color: #94a3b8;
}
</style>
